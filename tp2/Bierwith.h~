class Bierwith {
	public:
		std::vector<unsigned int> v_; // Le vecteur de B
		std::vector<unsigned int> jobs_; // Vecteur reperant quelle machine a traiter par job
		std::vector<job*> machine_; // Vecteur reperant le dernier job machine
		
		Bierwith(int, int);
		
		void shuffle() {
			std::random_shuffle(v_.begin(), v_.end());
		}
